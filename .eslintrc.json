{
	"extends": ["next/core-web-vitals", "prettier"],
	"plugins": ["simple-import-sort", "prettier"],
	"rules": {
		"prettier/prettier": "warn",
		"simple-import-sort/imports": [
			"warn",
			{
				"groups": [
					// packages
					["^react", "^\\u0000", "^@?\\w"],
					// components
					["components(/.*|$)"],
					// hooks
					["hooks(/.*|$)"],
					// utils
					["utils|utilities(/.*|$)"],
					// configs
					["duck|configs|validations(/.*|$)"],
					// Style imports.
					["^.+\\.s?css$"]
				]
			}
		],
		"simple-import-sort/exports": "warn"
	}
}
